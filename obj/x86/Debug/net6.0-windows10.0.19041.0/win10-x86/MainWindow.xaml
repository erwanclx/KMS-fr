<Window
    x:Class="TestKMS.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:TestKMS"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <NavigationView x:ConnectionId='2' x:Name="nvSample">
            <NavigationView.MenuItems>
                <NavigationViewItem Content="Windows Client" Tag="SamplePage1"  FontSize="16">
                    <NavigationViewItem.Icon>
                        <ImageIcon Source="ms-appx:///Assets/client.png"/>
                    </NavigationViewItem.Icon>
                </NavigationViewItem>
                <NavigationViewItem Content="Windows Serveur" Tag="SamplePage2"  FontSize="16" >
                    <NavigationViewItem.Icon>
                        <ImageIcon Source="ms-appx:///Assets/server.png"/>
                    </NavigationViewItem.Icon>
                </NavigationViewItem>
                <NavigationViewItem Content="Office" Tag="SamplePage3"  FontSize="16" >
                    <NavigationViewItem.Icon>
                        <ImageIcon Source="ms-appx:///Assets/doc.png"/>
                    </NavigationViewItem.Icon>
                </NavigationViewItem>
                <NavigationViewItem Content="Activations" Tag="SamplePage4"  FontSize="16" >
                    <NavigationViewItem.Icon>
                        <ImageIcon Source="ms-appx:///Assets/activ.png"/>
                    </NavigationViewItem.Icon>
                </NavigationViewItem>
            </NavigationView.MenuItems>
            <Frame x:ConnectionId='3' x:Name="contentFrame"/>
        </NavigationView>
    </Grid>

</Window>

